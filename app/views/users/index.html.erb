<% provide(:title, 'All Users') %>

<main class="page-body">
  <%= render 'shared/heading' %>

  <div class="card-columns">
    <% @users.each do |user| %>
      <div class="card bg-light">
        <div class="card-body">
          <h2 class="card-title">
            <%= link_to ((user == current_user) ? (user.name + " (You)") : user.name), user %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>
</main>
