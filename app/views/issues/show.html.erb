<% provide(:title, "Issue Details : ISE##{@issue.id}") %>

<main class="page-body">
  <%= render 'shared/heading' %>

  <%= render 'shared/details', object: @issue %>

  <% if current_user.admin? && @issue.solved_at.nil? %>
    <%= link_to "Mark as Solved", solveissue_issue_path(@issue) %>
  <% end %>
</main>
