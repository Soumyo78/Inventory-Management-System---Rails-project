<%= form_for @issue do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :item_id, "Item" %>
    <%= f.collection_select(:item_id, @items, :id, :item_display_name, include_blank: '--Not Allocated--') %>
  </div>

  <div class="form-group">
    <%= f.label :issue_description %>
    <%= f.text_area :issue_description, class: 'form-control' %>
  </div>

  <%= f.submit submit_text, class: "btn btn-primary form-control" %>
<% end %>
