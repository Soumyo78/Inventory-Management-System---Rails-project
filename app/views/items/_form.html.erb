<%= form_for @item do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :brand_id, "Brand" %>
    <%= f.collection_select(:brand_id, Brand.all, :id, :name, include_blank: '--Not Allocated--', class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= f.label :name, "Item Name" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, include_blank: '--Not Allocated--', class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Unit Price" %>
    <%= f.number_field :price, min: 0, step: 0.01, class: 'form-control' %>
  </div>

  <%= f.submit submit_text , class: "btn btn-primary form-control" %>
<% end %>
